{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
		"paths": {
			"~*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@content/*": ["src/content/*"],
			"@layouts/*": ["src/layouts/*"],
			"@pages/*": ["src/pages/*"],
			"@lib/*": ["src/lib/*"],
		}
  }
}